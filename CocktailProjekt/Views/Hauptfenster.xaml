<Window x:Class="Views.Hauptfenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        mc:Ignorable="d"
        Style="{StaticResource myWindow}"
        Title="Hauptfenster" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="264*"/>
            <ColumnDefinition Width="264*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="245*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Cocktail Mixer" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource ueberschriftLabel}"/>
        <Image Source="C:\Users\Jenny\Source\Repos\Cocktail-Projekt\CocktailProjekt\Views\bin\Debug\CocktailBild.png" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"/>
        <TextBlock Name="textBlockInfo" Text="Willkommen!" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource myTextBlock}"/>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Bottom">
            <Button Name="buttonAlkohol" Content="Alkohol" Style="{StaticResource myButton}" Template="{DynamicResource ButtonTemplate}"/>
            <Button Name="buttonSaft" Content="Saft" Style="{StaticResource myButton}"/>
            <Button Name="buttonDeko" Content="Deko" Style="{StaticResource myButton}"/>
        </StackPanel>
        <ListBox Name="listBoxMix" Grid.Row="2" Grid.Column="1"/>
        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            <Button Name="buttonEntfernen" Content="Entfernen" Style="{StaticResource myButton}"/>
            <Button Name="buttonMixen" Content="Mixen" Style="{StaticResource myButton}"/>
        </StackPanel>
    </Grid>
</Window>
